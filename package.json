    "private": true,
    "scripts": {
        "start": "node node_modules/react-native/local-cli/cli.js start",
        "build:jsbundle": "react-native bundle --platform android --dev false --entry-file index.js --bundle-output android/com/your-company-name/app-package-name/src/main/assets/index.android.bundle --assets-dest android/com/your-company-name/app-package-name/src/main/res/",
        "build:android": "cd android && ./gradlew assembleRelease"//需要签名
    },
    "dependencies": {
        "antd-mobile": "^2.0.3",
        "react": "^16.1.1",
        "react-native": "^0.50.3",
        "react-router-native": "^4.2.0"
    }
}
